<project name="Documentation" default="dist" basedir=".">
    <property name="dita.output"
        value="${basedir}${file.separator}output"/>
    <property name="dita.output.en"
        value="${dita.output}${file.separator}en"/>
    <property name="dita.output.fr"
        value="${dita.output}${file.separator}fr"/>
    <property name="dita.output.de"
        value="${dita.output}${file.separator}de"/>

    <import file="..${file.separator}dita${file.separator}build.xml"/>

<!--en-->
    <target name="dist"
        description="generate the distribution" >

        <antcall target="dita2xhtml">
            <param name="args.input"
                value="..${file.separator}en${file.separator}fusioninventory.ditamap"/>
            <param name="output.dir"
                value="${dita.output.en}"/>
            <param name="transtype" value="xhtml"/>
        </antcall>

        <antcall target="DOST.init">
            <param name="args.input"
                value="..${file.separator}en${file.separator}fusioninventory.ditamap"/>
            <param name="output.dir"      value="${dita.output.en}"/>
            <param name="transtype" value="pdf"/>
        </antcall>

<!--de-->
    <antcall target="dita2xhtml">
        <param name="args.input"
            value="..${file.separator}fr${file.separator}fusioninventory.ditamap"/>
        <param name="output.dir"
            value="${dita.output.de}"/>
        <param name="transtype" value="xhtml"/>
    </antcall>

    <antcall target="DOST.init">
        <param name="args.input"
            value="..${file.separator}de${file.separator}fusioninventory.ditamap"/>
        <param name="output.dir"      value="${dita.output.de}"/>
        <param name="transtype" value="pdf"/>
    </antcall>


<!--fr-->
        <antcall target="dita2xhtml">
            <param name="args.input"
                value="..${file.separator}fr${file.separator}fusioninventory.ditamap"/>
            <param name="output.dir"
                value="${dita.output.fr}"/>
            <param name="transtype" value="xhtml"/>
        </antcall>

        <antcall target="DOST.init">
            <param name="args.input"
                value="..${file.separator}fr${file.separator}fusioninventory.ditamap"/>
            <param name="output.dir"      value="${dita.output.fr}"/>
            <param name="transtype" value="pdf"/>
        </antcall>
    </target>


    </project>

